@model MicrosTestTask.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Вход в аккаунт";
}

<h2 class="text-center">Вход на сайт</h2>

<div class="container text-center" style="width: 300px">
	<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
		<div class="text-danger" asp-validation-summary="All"></div>

		<div class="mb-3">
			<label asp-for="Name">Введите логин</label><br />
			<input class="form-control" type="text" asp-for="Name" placeholder="Имя" />
		</div>
		<div class="mb-3">
			<label asp-for="Password">Введите пароль</label><br />
			<input class="form-control" asp-for="Password" placeholder="Пароль" />
		</div>

		<div>
			<button class="btn btn-outline-primary" type="submit">Войти</button>
		</div>

	</form>
	<p class="mt-2">Нет аккаунта? - <a asp-action="Register" asp-controller="Account">создайте его</a>!</p>
</div>

