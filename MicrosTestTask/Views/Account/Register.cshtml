@model MicrosTestTask.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<h2 class="text-center">Регистрация</h2>

<div class="container text-center" style="width: 300px">
	<form asp-action="Register" asp-controller="Account" asp-antiforgery="true">
		<div class="text-danger" asp-validation-summary="All"></div>

		<div class="mb-3">
			<label asp-for="Name">Введите логин</label><br />
			<input class="form-control" type="text" asp-for="Name" placeholder="Имя" />
		</div>
		<div class="mb-3">
			<label asp-for="Password">Введите пароль</label><br />
			<input class="form-control" asp-for="Password" placeholder="Пароль" />
		</div>
		<div class="mb-3">
			<label asp-for="ConfirmPassword">Повторите пароль</label><br />
			<input class="form-control" asp-for="ConfirmPassword" placeholder="Повторите пароль" />
		</div>

		<div>
			<button class="btn btn-outline-primary" type="submit">Регистрация</button>
		</div>
	</form>
	<p class="mt-2">Уже есть аккаунт? - <a asp-action="Login" asp-controller="Account">авторизуйтесь</a>!</p>
</div>


